    <TextView
        android:id="@+id/tvTrialTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/andika_regular"
        android:gravity="center"
        android:text="TURNO DI PROVA"

        android:textSize="36sp" />

    <TextView
        android:id="@+id/tvTrialQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTrialTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/andika_regular"
        android:gravity="center"
        android:text="Vuoi giocare un turno di prova?"
        android:textAllCaps="false"
        android:textSize="36sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTrialQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonTrialYes"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/trial_play"
            android:fontFamily="@font/andika_regular"
            android:gravity="center" />

        <Button
            android:id="@+id/buttonTrialNo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/trial_skip"
            android:fontFamily="@font/andika_regular"
            android:gravity="center" />
    </LinearLayout>

    <!--<Button
        android:id="@+id/buttonPrev"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_prev"
        android:fontFamily="@font/andika_regular"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:visibility="visible" />-->

    <LinearLayout
        android:id="@+id/llControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_back" />

        <ImageButton
            android:id="@+id/buttonHome"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_home" />

        <ImageButton
            android:id="@+id/buttonClose"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/button_close" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonPlayEndTutorial"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/tvTrialQuestion"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_play"
        android:visibility="invisible" />

</RelativeLayout>