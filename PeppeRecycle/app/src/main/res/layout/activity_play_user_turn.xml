<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignRight="@id/binBrown"
    android:layout_centerHorizontal="true"
    android:background="@drawable/bkgr_bins"
    android:animateLayoutChanges="true"
    tools:context=".game.PlayUserTurnActivity">

    <!--   android:background="@drawable/bkgr_bins_wrong"-->
    <TextView
        android:id="@+id/tvTutorial"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/andika_regular"
        android:gravity="center"
        android:text="Round di prova"
        android:textAllCaps="true"
        android:textColor="#FFEB3B"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/llUpperObjs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llScores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewPepperScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/pepper_face" />

            <TextView
                android:id="@+id/textViewPepperScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageViewUserScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/textViewUserScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="34sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvYourTurn"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/andika_regular"
            android:gravity="center"
            android:text="È il tuo turno!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/llControls"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonHelp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_help" />

            <ImageButton
                android:id="@+id/buttonHome"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_home"
                android:onClick="buttonHome" />


            <ImageButton
                android:id="@+id/buttonClose"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:background="@drawable/button_close"
                android:onClick="buttonClose" />

        </LinearLayout>
    </LinearLayout>

    <!--Sezione Bidoni-->
    <LinearLayout
        android:id="@+id/binsTVLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/textViewBinBrown"
            android:layout_width="230dp"
            android:layout_height="29dp"
            android:text="Organico"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewBinBlue"
            android:layout_width="230dp"
            android:layout_height="29dp"
            android:text="Carta e Cartone"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewBinYellow"
            android:layout_width="230dp"
            android:layout_height="29dp"
            android:text="Plastica e Metalli"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewBinGreen"
            android:layout_width="230dp"
            android:layout_height="29dp"
            android:text="Vetro"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/binsIVLayout"
        android:layout_width="920dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/binsTVLayout"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/binBrown"
            android:layout_width="230dp"
            android:layout_height="338dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/closed_bin_brown_shadow"
            android:maxWidth="230dp"
            android:maxHeight="338dp"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/binBlue"
            android:layout_width="230dp"
            android:layout_height="338dp"
            android:layout_alignBottom="@id/binBrown"
            android:layout_toRightOf="@id/binBrown"
            android:background="@drawable/closed_bin_blue_shadow"
            android:maxWidth="230dp"
            android:maxHeight="338dp"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/binYellow"
            android:layout_width="230dp"
            android:layout_height="338dp"
            android:layout_alignBottom="@id/binBlue"
            android:layout_toRightOf="@id/binBlue"
            android:background="@drawable/closed_bin_yellow_shadow"
            android:maxWidth="230dp"
            android:maxHeight="338dp"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/binGreen"
            android:layout_width="230dp"
            android:layout_height="338dp"
            android:layout_toRightOf="@id/binYellow"
            android:background="@drawable/closed_bin_green_shadow"
            android:maxWidth="230dp"
            android:maxHeight="338dp"
            android:scaleType="center" />
    </LinearLayout>

    <!-- -->

