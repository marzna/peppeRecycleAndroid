<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignRight="@id/binBrown"
    android:layout_centerHorizontal="true"
    android:background="@drawable/bkgr_bins"
    android:animateLayoutChanges="true"
    tools:context=".PlayUserTurnActivity">

    <!--   android:background="@drawable/bkgr_bins_wrong"-->

    <ImageButton
        android:id="@+id/buttonClose"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_close"
        android:onClick="buttonClose"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="299dp" />

    <ImageButton
        android:id="@+id/buttonHome"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/buttonClose"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="-52dp"
        android:layout_marginEnd="53dp"
        android:background="@drawable/button_home"
        android:onClick="buttonHome"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="299dp" />

    <ImageButton
        android:id="@+id/buttonHelp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/buttonHome"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="-52dp"
        android:layout_marginEnd="53dp"
        android:background="@drawable/button_help"
        android:fontFamily="@font/andika_regular"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="299dp"/>

    <!--Sezione Bidoni-->
    <LinearLayout
        android:id="@+id/binsTVLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/textViewBinBrown"
            android:layout_width="230dp"
            android:layout_height="29dp"
            android:text="Organico"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewBinBlue"
            android:layout_width="230dp"
            android:layout_height="29dp"
            android:text="Carta e Cartone"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewBinYellow"
            android:layout_width="230dp"
            android:layout_height="29dp"
            android:text="Plastica e Metalli"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewBinGreen"
            android:layout_width="230dp"
            android:layout_height="29dp"
            android:text="Vetro"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/binsIVLayout"
        android:layout_width="920dp"
        android:layout_height="1352dp"
        android:layout_above="@id/binsTVLayout"
        android:layout_below="@id/guessBin"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/binBrown"
            android:layout_width="230dp"
            android:layout_height="338dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/closed_bin_brown_shadow"
            android:maxWidth="230dp"
            android:maxHeight="338dp"
            android:onClick="selectBinBrown"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/binBlue"
            android:layout_width="230dp"
            android:layout_height="338dp"
            android:layout_alignBottom="@id/binBrown"
            android:layout_toRightOf="@id/binBrown"
            android:background="@drawable/closed_bin_blue_shadow"
            android:maxWidth="230dp"
            android:maxHeight="338dp"
            android:onClick="selectBinBlue"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/binYellow"
            android:layout_width="230dp"
            android:layout_height="338dp"
            android:layout_alignBottom="@id/binBlue"
            android:layout_toRightOf="@id/binBlue"
            android:background="@drawable/closed_bin_yellow_shadow"
            android:maxWidth="230dp"
            android:maxHeight="338dp"
            android:onClick="selectBinYellow"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/binGreen"
            android:layout_width="230dp"
            android:layout_height="338dp"
            android:layout_toRightOf="@id/binYellow"
            android:background="@drawable/closed_bin_green_shadow"
            android:maxWidth="230dp"
            android:maxHeight="338dp"
            android:onClick="selectBinGreen"
            android:scaleType="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTutorial"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/andika_regular"
        android:gravity="center"
        android:text="Turno di prova"
        android:textAllCaps="true"
        android:textColor="#FFEB3B"
        android:textSize="30dp"
        android:textStyle="bold|italic" />
    <!-- -->

    <TextView
        android:id="@+id/tvYourTurn"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/textViewUserScore"
        android:fontFamily="@font/andika_regular"
        android:gravity="center"
        android:text="Ãˆ il tuo turno!"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/guessBin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewUserScore"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/andika_regular"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="In quale bidone dobbiamo buttare questo rifiuto?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="italic"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textViewPepperScore"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageViewPepperScore"
        android:gravity="center"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageViewUserScore"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textViewPepperScore"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/textViewUserScore"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageViewUserScore"
        android:gravity="center"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageViewPepperScore"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/pepper_face" />


</RelativeLayout>