<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignRight="@id/binBrown"
    android:layout_centerHorizontal="true"
    android:background="@drawable/bkgr_bins"
    tools:context=".PlayUserTurnActivity">

    <!--   android:background="@drawable/bkgr_bins_wrong"-->

    <ImageButton
        android:id="@+id/buttonClose"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_close"
        android:onClick="buttonClose"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="299dp" />

    <ImageButton
        android:id="@+id/buttonHome"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/buttonClose"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="-52dp"
        android:layout_marginEnd="53dp"
        android:background="@drawable/button_home"
        android:onClick="buttonHome"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="299dp" />

    <ImageButton
        android:id="@+id/buttonHelp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/buttonHome"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="-52dp"
        android:layout_marginEnd="53dp"
        android:background="@drawable/button_help"
        android:fontFamily="@font/andika_regular"
        android:onClick="buttonHelp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="299dp"/>

    <ImageButton
        android:id="@+id/binBrown"
        android:layout_width="230dp"
        android:layout_height="338dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bin_brown_shadow"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="selectBinBrown"/>

    <ImageButton
        android:id="@+id/binBlue"
        android:layout_width="230dp"
        android:layout_height="338dp"
        android:layout_alignBottom="@id/binBrown"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/binBrown"
        android:background="@drawable/bin_blue_shadow"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="selectBinBlue" />

    <ImageButton
        android:id="@+id/binYellow"
        android:layout_width="230dp"
        android:layout_height="338dp"
        android:layout_alignBottom="@id/binBlue"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/binBlue"
        android:background="@drawable/bin_yellow_shadow"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="selectBinYellow"/>

    <ImageButton
        android:id="@+id/binGreen"
        android:layout_width="230dp"
        android:layout_height="338dp"
        android:layout_alignBottom="@id/binYellow"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/binYellow"
        android:background="@drawable/bin_green_shadow"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="selectBinGreen"/>

    <TextView
        android:id="@+id/textViewBinBrown"
        android:layout_width="166dp"
        android:layout_height="29dp"
        android:layout_above="@id/binBrown"
        android:layout_alignLeft="@id/binBrown"
        android:text="Organico"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewBinBlue"
        android:layout_width="166dp"
        android:layout_height="29dp"
        android:layout_above="@id/binBlue"
        android:layout_alignLeft="@id/binBlue"
        android:text="Carta e Cartone"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewBinYellow"
        android:layout_width="166dp"
        android:layout_height="29dp"
        android:layout_above="@id/binYellow"
        android:layout_alignLeft="@id/binYellow"
        android:text="Plastica e Metalli"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewBinGreen"
        android:layout_width="166dp"
        android:layout_height="29dp"
        android:layout_above="@id/binGreen"
        android:layout_alignLeft="@id/binGreen"
        android:text="Vetro"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/guessBin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textViewBinBrown"
        android:layout_below="@id/imageViewUserScore"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/andika_regular"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="Ãˆ il tuo turno!\nIn quale bidone dobbiamo buttare questo rifiuto?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="italic"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Punteggio:"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewPepperScore"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/imageViewPepperScore"
        android:gravity="center"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/imageViewUserScore"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageViewPepperScore"
        android:layout_toRightOf="@id/textViewScore"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/textViewUserScore"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_below="@id/imageViewPepperScore"
        android:layout_toRightOf="@id/imageViewUserScore"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/imageViewPepperScore"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/textViewScore"
        app:srcCompat="@drawable/pepper_face" />

</RelativeLayout>